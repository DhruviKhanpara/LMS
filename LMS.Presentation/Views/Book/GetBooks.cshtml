@using LMS.Presentation.HTMLHelper;
@using LMS.Core.Enums;

@model LMS.Application.Contracts.DTOs.PaginatedResponseDto<LMS.Application.Contracts.DTOs.Books.GetBookDto>

@{
    ViewData["Title"] = "GetBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    th {
        position: relative;
    }
</style>

<script src="~/js/sorting.js" asp-append-version="true"></script>
<script src="~/js/filterSelector.js" asp-append-version="true"></script>

@Html.Heading("Book Information")
<div class="container-fluid my-1">
    <div class="d-flex justify-content-end px-3 my-3 gap-3">
        <div>
            <a class="btn btn-submit color-purple" id="book-add-btn">Add Book</a>
        </div>
        <div>
            <a asp-area="" asp-controller="Book" asp-action="GetExportBooks" class="btn btn-submit color-purple">Export Books</a>
        </div>
        @if (User.Identity.IsAuthenticated && User.IsInRole(nameof(RoleListEnum.Admin)))
        {

            <div class="did-floating-label-content m-0 w-15">
                <select class="did-floating-select select2-single filter-options" data-params="activeData" id="data-selection-option" value="">
                    <option value="">Removed and Active Data</option>
                    <option value="true">Active Data</option>
                    <option value="false">Removed Data</option>
                </select>
            </div>
        }
        <div class="did-floating-label-content m-0 w-15">
            <select
                    class="did-floating-select select2-single filter-options"
                    data-params="genre"
                    asp-items="@(Model.Selections.ContainsKey("Genres") ? Model.Selections["Genres"] : new List<SelectListItem>())"
                    onclick="this.setAttribute('value', this.value);"
                    onchange="this.setAttribute('value', this.value);"
                    value="">
                <option value=""></option>
            </select>
            <label class="did-floating-label">Genre</label>
        </div>
    </div>
    <div class="table-responsive scrollable-table">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th class="sortable-header text-center" data-field="StatusLabel">Status</th>
                    <th class="sortable-header" data-field="Title">Title</th>
                    <th class="sortable-header" data-field="Isbn">ISBN number</th>
                    <th class="sortable-header" data-field="GenreName">Genre name</th>
                    <th class="sortable-header text-center" data-field="TotalCopies">Total copies</th>
                    <th class="sortable-header text-center" data-field="AvailableCopies">Available copies</th>
                    <th class="sortable-header text-center" data-field="Price">Price</th>
                    <th class="sortable-header" data-field="Author">Author</th>
                    <th class="sortable-header" data-field="Publisher">Publisher</th>
                    <th class="sortable-header text-center" data-field="PublishAt">Publish date</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Data is not null && Model.Data.Any())
                {
                    @foreach (var item in Model.Data)
                    {
                        <tr class="@(item.IsRemoved ? "bg-color-danger" : "bg-color-default")">
                            <td>
                                <div class="d-flex justify-content-between gap-3 book-details-table">
                                    @if (User.Identity.IsAuthenticated && (User.IsInRole(nameof(RoleListEnum.Librarian)) || User.IsInRole(nameof(RoleListEnum.Admin))) && !item.IsRemoved)
                                    {
                                        <a class="color-purple bi-hover-bold book-actionById-btn" 
                                            asp-area="" 
                                            asp-controller="Book" 
                                            asp-action="GetBookDetailById" 
                                            data-book-id="@item.Id" 
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right" 
                                            title="Detail">
                                        <i class="bi bi-exclamation-circle"></i></a>

                                        <a class="color-purple bi-hover-bold book-actionById-btn" 
                                            asp-area="" 
                                            asp-controller="Book" 
                                            asp-action="UpdateBook" 
                                            data-book-id="@item.Id" 
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right" 
                                            title="Edit">
                                        <i class="bi bi-pencil-square"></i></a>

                                        <a class="color-purple bi-hover-bold book-delete-btn" 
                                            asp-area="" 
                                            asp-controller="Book" 
                                            asp-action="DeleteBook" 
                                            data-book-id="@item.Id" 
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right" 
                                            title="Delete">
                                        <i class="bi bi-trash3"></i></a>
                                    }

                                    @if (User.Identity.IsAuthenticated && User.IsInRole(nameof(RoleListEnum.Admin)))
                                    {
                                        <a class="color-purple bi-hover-bold book-actionById-btn"
                                           asp-area="" 
                                            asp-controller="Log"
                                           asp-action="GetBookAuditHistoryByBookId"
                                           data-book-id="@item.Id" 
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right" 
                                            title="History">
                                        <i class="bi bi-clock-history"></i></a>
                                        
                                        @if (item.IsRemoved)
                                        {
                                            @* restore *@
                                        }
                                    }

                                    <a class="color-purple bi-hover-bold book-redirect-btn" 
                                        asp-area="" 
                                        asp-controller="Transection" 
                                        asp-action="GetTransections" 
                                        data-book-id="@item.Id"
                                        data-bs-toggle="tooltip" 
                                        data-bs-placement="right"
                                        title="Check-outs">
                                    <i class="bi bi-cart3"></i></a>

                                    <a class="color-purple bi-hover-bold book-redirect-btn" 
                                        asp-area="" 
                                        asp-controller="Reservation"
                                        asp-action="GetReservations" 
                                        data-bs-toggle="tooltip" 
                                        data-bs-placement="right" 
                                        data-book-id="@item.Id" 
                                        title="Reservation">
                                    <i class="bi bi-journal-check"></i></a>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="status-clip @(item.StatusLabelColor != null ? "dynamic-style" : "default-style")"
                                     style="--bgcolor:@item.StatusLabelBgColor; --textcolor:@item.StatusLabelColor;">
                                    @Html.DisplayFor(modelItem => item.StatusLabel)
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Isbn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GenreName)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.TotalCopies)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.AvailableCopies)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Price) <i class="fa fa-inr" aria-hidden="true"></i>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Publisher)
                            </td>
                            <td class="text-center">
                                @item.PublishAt?.DateTime.ToString("dd-MM-yyyy hh:mm:ss tt")
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="11" class="text-center border-0">No records found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @{
        await Html.RenderPartialAsync("_PaginationPartial", Model.Pagination);
    }
</div>

<div id="bookContainer"></div>
<div id="confirmationModalContainer">
    @await Html.PartialAsync("_ConfirmationBoxModelPartial")
</div>
<div id="imageModalContainer">
    @Html.TransparentModal()
</div>

<script type="text/javascript">
    $(document).ready(function ()
    {
        var successToastMessage = '@TempData["SuccessToast"]'; 
        var errorToastMessage = '@TempData["ErrorToast"]';

        if (successToastMessage)
        {
            toastr.success(successToastMessage, "Success");
        }
        else if (errorToastMessage)
        {
            toastr.error(errorToastMessage, "Error");
        }

        $('#book-add-btn').off("click").on("click", function ()
        {
            event.preventDefault();
            toggleButtonState('#book-add-btn', true, 'color-purple btn-submit');

            $.ajax({
                url: '@Url.Action("AddBook", "Book")',
                type: 'GET',
                contentType: 'application/json',
                success: function (result)
                {
                    $('#bookContainer').html(result);
                }
            });
            toggleButtonState('#book-add-btn', false, 'color-purple btn-submit');
        });

        $('.book-details-table .book-delete-btn').off("click").on("click", function (event)
        {
            event.preventDefault();
            $(this).addClass("btn-submit-disabled");

            var bookId = $(this).data('book-id');

            if (bookId !== undefined)
            {
                var message = "Are you sure you want delete this book?";
                setProceedButtonHref(this, message, "id=" + bookId);
            }

            $(this).removeClass("btn-submit-disabled");
        });

        $('.book-details-table .book-actionById-btn').off("click").on("click", function (event)
        {
            event.preventDefault();
            $(this).addClass("btn-submit-disabled")

            var bookId = $(this).data('book-id');

            if (bookId !== undefined)
            {
                $.ajax({
                    url: $(this).attr("href"),
                    data: { id: bookId },
                    type: 'GET',
                    contentType: 'application/json',
                    success: function (result)
                    {
                        $('#bookContainer').html(result);
                    }
                });
            }
            
            $(this).removeClass("btn-submit-disabled");
        });

        $('.book-details-table .book-redirect-btn').off("click").on("click", function (event)
        {
            event.preventDefault();
            $(this).addClass("btn-submit-disabled")

            var bookId = $(this).data('book-id');

            if (bookId !== undefined)
            {
                var url = $(this).attr("href") + "?book=" + bookId;
                window.location.href = url.toString();
            }

            $(this).removeClass("btn-submit-disabled");
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}