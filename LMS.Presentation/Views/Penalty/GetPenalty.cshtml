@using LMS.Presentation.HTMLHelper;
@using LMS.Core.Enums;

@model LMS.Application.Contracts.DTOs.PaginatedResponseDto<LMS.Application.Contracts.DTOs.Penalty.GetPenaltyDto>

@{
    ViewData["Title"] = "GetPenalty";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var unpaidStatus = nameof(FineStatusEnum.UnPaid);
    var isAdmin = User.Identity.IsAuthenticated && User.IsInRole(nameof(RoleListEnum.Admin));
}

<style>
    th {
        position: relative;
    }
</style>

<script src="~/js/sorting.js" asp-append-version="true"></script>
<script src="~/js/filterSelector.js" asp-append-version="true"></script>

@Html.Heading("Penalty Information")
<div class="container-fluid my-1">
    <div class="d-flex justify-content-end px-3 my-3 gap-3">
        <div>
            <a class="btn btn-submit color-purple" id="penalty-add-btn">Create Penalty</a>
        </div>
        <div>
            <a asp-area="" asp-controller="Penalty" asp-action="GetExportPenalty" class="btn btn-submit color-purple">Export Penalty</a>
        </div>
        @if (User.Identity.IsAuthenticated && User.IsInRole(nameof(RoleListEnum.Admin)))
        {
            <div class="did-floating-label-content m-0 w-15">
                <select class="did-floating-select select2-single filter-options" data-params="activeData" id="data-selection-option" value="">
                    <option value="">Removed and Active Data</option>
                    <option value="true">Active Data</option>
                    <option value="false">Removed Data</option>
                </select>
            </div>
        }
        <div class="did-floating-label-content  m-0 w-15">
            <select id="get-penalty-form-userId"
                    class="did-floating-select select2-single filter-options"
                    data-params="user"
                    asp-items="@(Model.Selections.ContainsKey("Users") ? Model.Selections["Users"] : new List<SelectListItem>())"
                    onclick="this.setAttribute('value', this.value);"
                    onchange="this.setAttribute('value', this.value);"
                    value="">
                <option value=""></option>
            </select>
            <label class="did-floating-label">User</label>
        </div>
        <div class="did-floating-label-content  m-0 w-15">
            <select id="get-penalty-form-penaltyTypeId"
                    class="did-floating-select select2-single filter-options"
                    data-params="penaltyType"
                    asp-items="@(Model.Selections.ContainsKey("PenaltyType") ? Model.Selections["PenaltyType"] : new List<SelectListItem>())"
                    onclick="this.setAttribute('value', this.value);"
                    onchange="this.setAttribute('value', this.value);"
                    value="">
                <option value=""></option>
            </select>
            <label class="did-floating-label">Penalty Type</label>
        </div>
    </div>
    <div class="table-responsive scrollable-table">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th class="px-3">User</th>
                    <th class="sortable-header text-center" data-field="StatusLabel">Status</th>
                    <th class="sortable-header text-center" data-field="PenaltyTypeName">Penalty Type</th>
                    <th class="sortable-header text-center" data-field="PenaltyTypeName">Penalty Type Info</th>
                    <th class="sortable-header text-center" data-field="Description">Notes</th>
                    <th class="sortable-header text-center" data-field="Amount">Amount</th>
                    <th class="sortable-header text-center" data-field="OverDueDays">OverDue Days</th>
                    <th class="sortable-header text-center" data-field="TransectionDueDate">Transaction Due Date</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Data is not null && Model.Data.Any())
                {
                    @foreach (var item in Model.Data)
                    {
                        <tr class="@(item.IsRemoved ? "bg-color-danger" : "bg-color-default")">
                            <td>
                                <div class="d-flex justify-content-between gap-3 penalty-details-table">
                                    @if (User.Identity.IsAuthenticated && (User.IsInRole(nameof(RoleListEnum.Librarian)) || User.IsInRole(nameof(RoleListEnum.Admin))) && !item.IsRemoved)
                                    {
                                        <a class="color-purple bi-hover-bold penalty-actionById-btn" 
                                            asp-area=""
                                            asp-controller="Penalty"
                                            asp-action="GetPenaltyDetailById" 
                                            data-penalty-id="@item.Id" 
                                            data-bs-toggle="tooltip"
                                            data-bs-placement="right" 
                                            title="Detail">
                                        <i class="bi bi-exclamation-circle"></i></a>

                                        <a class="color-purple bi-hover-bold penalty-actionById-btn"
                                            asp-area="" 
                                            asp-controller="Penalty" 
                                            asp-action="UpdatePenalty" 
                                            data-penalty-id="@item.Id" 
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right"
                                            title="Edit">
                                        <i class="bi bi-pencil-square"></i></a>

                                        <a class="color-purple bi-hover-bold penalty-delete-btn" 
                                            asp-area="" 
                                            asp-controller="Penalty"
                                            asp-action="RemovePenalty" 
                                            data-penalty-id="@item.Id"
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right"
                                            title="Delete">
                                        <i class="bi bi-trash3"></i></a>

                                        <a class="color-purple bi-hover-bold penalty-actionById-btn transection-link" 
                                            asp-area="" 
                                            asp-controller="Transection"
                                            asp-action="GetTransectionDetailById" 
                                            data-penalty-id="@item.Id"
                                            data-id="@item.TransectionId"
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right"
                                            title="Linked Transection">
                                        <i class="bi bi-link-45deg"></i></a>
                                    }

                                    @if (User.Identity.IsAuthenticated && User.IsInRole(nameof(RoleListEnum.Admin)))
                                    {
                                        <a class="color-purple bi-hover-bold penalty-actionById-btn"
                                            asp-area=""
                                            asp-controller="Log"
                                            asp-action="GetPenaltyAuditHistoryByPenaltyId"
                                            data-penalty-id="@item.Id"
                                            data-bs-toggle="tooltip"
                                            data-bs-placement="right"
                                            title="History">
                                        <i class="bi bi-clock-history"></i></a>

                                        @if (item.IsRemoved)
                                        {
                                            @* restore *@
                                        }
                                    }
                                </div>
                            </td>
                            <td>
                                <img src="@item.UserProfilePhoto" alt="User" width="20" height="20" class="rounded-circle border-dark border-1 mx-1" /> @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td class="text-center">
                                <div class="status-clip px-2 @(item.StatusLabelColor != null ? "dynamic-style" : "default-style")"
                                     style="--bgcolor:@item.StatusLabelBgColor; --textcolor:@item.StatusLabelColor;">
                                    @Html.DisplayFor(modelItem => item.StatusLabel)
                                </div>
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.PenaltyTypeName)
                            </td>
                            <td class="truncate-description-container" data-max-length="50" data-bs-toggle="tooltip" data-bs-placement="right" title="@item.PenaltyTypeInfo">
                                @Html.DisplayFor(modelItem => item.PenaltyTypeInfo)
                            </td>
                            <td class="truncate-description-container" data-max-length="50" data-bs-toggle="tooltip" data-bs-placement="right" title="@item.Description">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Amount) <i class="fa fa-inr" aria-hidden="true"></i>
                            </td>
                            <td class="text-center">
                                @(item.OverDueDays != null ? Html.DisplayFor(modelItem => item.OverDueDays) : "-")
                            </td>
                            <td class="text-center">
                                @(item.TransectionDueDate?.DateTime.ToString("dd-MM-yyyy hh:mm:ss tt") ?? "-")
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center border-0">No records found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @{
        await Html.RenderPartialAsync("_PaginationPartial", Model.Pagination);
    }
</div>

<div id="penaltyContainer"></div>
<div id="confirmationModalContainer">
    @await Html.PartialAsync("_ConfirmationBoxModelPartial")
</div>

<script>
    $(document).ready(function ()
    {
        var successToastMessage = '@TempData["SuccessToast"]';
        var errorToastMessage = '@TempData["ErrorToast"]';

        if (successToastMessage)
        {
            toastr.success(successToastMessage, "Success");
        }
        else if (errorToastMessage)
        {
            toastr.error(errorToastMessage, "Error");
        }

        var deleteStatusLookup = @Html.Raw(Json.Serialize(Model.Data?.ToDictionary(m => m.Id, m => @isAdmin || m.StatusLabel != @unpaidStatus)));
        var transectionLookup = @Html.Raw(Json.Serialize(Model.Data?.ToDictionary(m => m.Id, m => m.TransectionId != null && m.TransectionId != 0)));

        $(".penalty-delete-btn").each(function ()
        {
            var penaltyId = $(this).data("penalty-id");
            var isEnable = deleteStatusLookup[penaltyId];

            if (!isEnable)
            {
                $(this).addClass("btn-submit-disabled")
                    .attr("title", "Disabled due to penalty is un-paid")
                    .removeAttr("data-penalty-id");
            }
        });

        $(".transection-link").each(function ()
        {
            var penaltyId = $(this).data("penalty-id");
            var haveTransection = transectionLookup[penaltyId];

            if (!haveTransection)
            {
                $(this).addClass("btn-submit-disabled")
                    .attr("title", "Disabled due to Transaction is not linked")
                    .removeAttr("data-penalty-id")
                    .removeAttr("data-id");
            }
        });

        $('#penalty-add-btn').off("click").on("click", function ()
        {
            event.preventDefault();
            toggleButtonState('#penalty-add-btn', true, 'color-purple btn-submit');

            $.ajax({
                url: '@Url.Action("AddPenalty", "Penalty")',
                type: 'GET',
                contentType: 'application/json',
                success: function (result)
                {
                    $('#penaltyContainer').html(result);
                }
            });
            toggleButtonState('#penalty-add-btn', false, 'color-purple btn-submit');
        });

        $('.penalty-details-table .penalty-delete-btn').off("click").on("click", function (event)
        {
            event.preventDefault();
            $(this).addClass("btn-submit-disabled");

            var penaltyId = $(this).data('penalty-id');

            if (penaltyId !== undefined)
            {
                var message = "Are you sure you want delete this penalty?";
                setProceedButtonHref(this, message, "id=" + penaltyId);
            }

            $(this).removeClass("btn-submit-disabled");
        });

        $('.penalty-details-table .penalty-actionById-btn').off("click").on("click", function (event)
        {
            event.preventDefault();
            $(this).addClass("btn-submit-disabled");

            var id = $(this).data('penalty-id');

            if ($(this).hasClass("transection-link"))
                id = $(this).data('id');

            if (id !== undefined)
            {
                $.ajax({
                    url: $(this).attr("href"),
                    data: { id: id },
                    type: 'GET',
                    contentType: 'application/json',
                    success: function (result)
                    {
                        $('#penaltyContainer').html(result);
                    }
                });
            }

            $(this).removeClass("btn-submit-disabled");
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}