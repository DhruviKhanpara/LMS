@using LMS.Presentation.HTMLHelper;
@using LMS.Core.Enums;

@model LMS.Application.Contracts.DTOs.PaginatedResponseDto<LMS.Application.Contracts.DTOs.UserMembershipMapping.GetUserMembersipListDto>

@{
    ViewData["Title"] = "GetUserMemberships";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    th {
        position: relative;
    }
</style>

<script src="~/js/sorting.js" asp-append-version="true"></script>
<script src="~/js/filterSelector.js" asp-append-version="true"></script>

@Html.Heading("User Membership Information")
<div class="container-fluid my-1">
    <div class="d-flex justify-content-end px-3 my-3 gap-3">
        <div>
            <a class="btn btn-submit color-purple" id="user-membership-add-btn">Add User membership</a>
        </div>
        <div>
            <a asp-area="" asp-controller="UserMembershipMapping" asp-action="GetExportUserMemberships" class="btn btn-submit color-purple">Export User membership</a>
        </div>
        @if (User.Identity.IsAuthenticated && User.IsInRole(nameof(RoleListEnum.Admin)))
        {
            <div class="did-floating-label-content m-0 w-15">
                <select class="did-floating-select select2-single filter-options" data-params="activeData" id="data-selection-option" value="">
                    <option value="">Removed and Active Data</option>
                    <option value="true">Active Data</option>
                    <option value="false">Removed Data</option>
                </select>
            </div>
        }
        <div class="did-floating-label-content m-0 w-15">
            <select id="get-reservation-form"
                    class="did-floating-select select2-single filter-options"
                    data-params="user"
                    asp-items="@(Model.Selections.ContainsKey("Users") ? Model.Selections["Users"] : new List<SelectListItem>())"
                    onclick="this.setAttribute('value', this.value);"
                    onchange="this.setAttribute('value', this.value);"
                    value="">
                <option value=""></option>
            </select>
            <label class="did-floating-label">User</label>
        </div>
    </div>
    <div class="table-responsive scrollable-table">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th class="sortable-header" data-field="UserName">UserName</th>
                    <th class="sortable-header" data-field="MembershipType">Membership Type</th>
                    <th class="text-center">Status</th>
                    <th class="sortable-header text-center" data-field="MembershipDescription">Membership Description</th>
                    <th class="sortable-header text-center" data-field="EffectiveStartDate">Start Date</th>
                    <th class="sortable-header text-center" data-field="ExpirationDate">Expiration Date</th>
                    <th class="sortable-header text-center" data-field="BorrowLimit">Borrow Limit</th>
                    <th class="sortable-header text-center" data-field="ReservationLimit">Reservation Limit</th>
                    <th class="sortable-header text-center" data-field="MembershipCost">Membership Cost</th>
                    <th class="sortable-header text-center" data-field="Discount">Discount</th>
                    <th class="sortable-header text-center" data-field="PaidAmount">Paid Amount</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Data is not null && Model.Data.Any())
                {
                    @foreach (var item in Model.Data)
                    {
                        <tr class="@(item.IsRemoved ? "bg-color-danger" : "bg-color-default")">
                            <td>
                                <div class="d-flex justify-content-between gap-3 user-membership-details-table">
                                    @if (User.Identity.IsAuthenticated && (User.IsInRole(nameof(RoleListEnum.Librarian)) || User.IsInRole(nameof(RoleListEnum.Admin))) && !item.IsRemoved)
                                    {
                                        <a class="color-purple bi-hover-bold user-membership-actionById-btn" 
                                            asp-area="" 
                                            asp-controller="UserMembershipMapping" 
                                            asp-action="GetUserMembershipDetailById" 
                                            data-user-membership-id="@item.Id"
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right"
                                            title="Detail">
                                        <i class="bi bi-exclamation-circle"></i></a>

                                        <a class="color-purple bi-hover-bold user-membership-actionById-btn" 
                                            asp-area="" 
                                            asp-controller="UserMembershipMapping"
                                            asp-action="UpdateUserMembership"
                                            data-user-membership-id="@item.Id" 
                                            data-bs-toggle="tooltip"
                                            data-bs-placement="right" 
                                            title="Edit">
                                        <i class="bi bi-pencil-square"></i></a>

                                        <a class="color-purple bi-hover-bold user-membership-delete-btn" 
                                            asp-area=""
                                            asp-controller="UserMembershipMapping"
                                            asp-action="DeleteUserMembership" 
                                            data-user-membership-id="@item.Id"
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right" 
                                            title="Delete">
                                        <i class="bi bi-trash3"></i></a>
                                    }

                                    @if (User.Identity.IsAuthenticated && User.IsInRole(nameof(RoleListEnum.Admin)))
                                    {
                                        <a class="color-purple bi-hover-bold user-membership-actionById-btn"
                                            asp-area=""
                                            asp-controller="Log"
                                            asp-action="GetUserMembershipAuditHistoryByUserMembershipId"
                                            data-user-membership-id="@item.Id"
                                            data-bs-toggle="tooltip"
                                            data-bs-placement="right"
                                            title="History">
                                        <i class="bi bi-clock-history"></i></a>

                                        @if (item.IsRemoved)
                                        {
                                            @* restore *@
                                        }
                                    }
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MembershipType)
                            </td>
                            <td class="text-center">
                                <div class="status-clip px-2 @(item.StatusLabelColor != null ? "dynamic-style" : "default-style")"
                                     style="--bgcolor:@item.StatusLabelBgColor; --textcolor:@item.StatusLabelColor;">
                                    @Html.DisplayFor(modelItem => item.StatusLabel)
                                </div>
                            </td>
                            <td class="truncate-description-container" data-max-length="40" data-bs-toggle="tooltip" data-bs-placement="right" title="@item.MembershipDescription">
                                @Html.DisplayFor(modelItem => item.MembershipDescription)
                            </td>
                            <td class="text-center">
                                @item.EffectiveStartDate.DateTime.ToString("dd-MM-yyyy hh:mm:ss tt")
                            </td>
                            <td class="text-center">
                                @item.ExpirationDate.DateTime.ToString("dd-MM-yyyy hh:mm:ss tt")
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.BorrowLimit)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.ReservationLimit)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.MembershipCost)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Discount)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.PaidAmount)
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="12" class="text-center border-0">No records found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @{
        await Html.RenderPartialAsync("_PaginationPartial", Model.Pagination);
    }
</div>

<div id="userMembershipContainer"></div>
<div id="confirmationModalContainer">
    @await Html.PartialAsync("_ConfirmationBoxModelPartial")
</div>

<script>
    $(document).ready(function ()
    {
        var successToastMessage = '@TempData["SuccessToast"]';
        var errorToastMessage = '@TempData["ErrorToast"]';

        if (successToastMessage)
        {
            toastr.success(successToastMessage, "Success");
        }
        else if (errorToastMessage)
        {
            toastr.error(errorToastMessage, "Error");
        }

        $('#user-membership-add-btn').off("click").on("click", function ()
        {
            event.preventDefault();
            toggleButtonState('#user-membership-add-btn', true, 'color-purple btn-submit');

            $.ajax({
                url: '@Url.Action("AddUserMembership", "UserMembershipMapping")',
                type: 'GET',
                contentType: 'application/json',
                success: function (result)
                {
                    $('#userMembershipContainer').html(result);
                }
            });
            toggleButtonState('#user-membership-add-btn', false, 'color-purple btn-submit');
        });

        $('.user-membership-details-table .user-membership-delete-btn').off("click").on("click", function (event)
        {
            event.preventDefault();
            $(this).addClass("btn-submit-disabled");

            var userMembershipId = $(this).data('user-membership-id');

            if (userMembershipId !== undefined)
            {
                var message = "Are you sure you want delete this user membership? \n This User may have active membership or may have reservation user may lost it";
                setProceedButtonHref(this, message, "id=" + userMembershipId);
            }

            $(this).removeClass("btn-submit-disabled");
        })

        $('.user-membership-details-table .user-membership-actionById-btn').off("click").on("click", function (event)
        {
            event.preventDefault();
            $(this).addClass("btn-submit-disabled");

            var userMembershipId = $(this).data('user-membership-id');

            if (userMembershipId !== undefined)
            {
                $.ajax({
                    url: $(this).attr("href"),
                    data: { id: userMembershipId },
                    type: 'GET',
                    contentType: 'application/json',
                    success: function (result)
                    {
                        $('#userMembershipContainer').html(result);
                    }
                });
            }

            $(this).removeClass("btn-submit-disabled");
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}