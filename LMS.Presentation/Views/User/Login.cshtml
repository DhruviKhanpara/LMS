@model LMS.Application.Contracts.DTOs.User.LoginUserDto

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/themes/light/loginlayout.css" asp-append-version="true" />

<div class="login-container">
    <div class="left-section">
        <h2>Welcome to ABC Library Management System</h2>
    </div>
    <div class="right-section">
        <form asp-action="Login">
            <div class="d-flex flex-row justify-content-between">
                <div>
                    <h3 class="login-title color-purple">Login</h3>
                    <p class="text-muted">How do I get started with Library?</p>
                </div>
            </div>
            <div class="my-2">
                <div class="did-floating-label-content">
                    <input asp-for="EmailOrUsername" type="text" class="did-floating-input" placeholder="">
                    <label asp-for="EmailOrUsername" class="did-floating-label">Email or Username<sup class="text-danger">*</sup></label>
                    <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
                </div>
            </div>
            <div class="my-2">
                <div class="did-floating-label-content">
                    <div class="password-container">
                        <input asp-for="Password" class="did-floating-input" type="password" placeholder="">
                        <label asp-for="Password" class="did-floating-label">Password<sup class="text-danger">*</sup></label>
                        <span class="togglePassword" onmousedown="passwordVisibilityStart(this)" onmouseup="passwordVisibilityEnd(this)">
                            <i class="fa fa-eye"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex align-items-start justify-content-end">
                <a asp-area="" asp-controller="" asp-action="" class="text-decoration-none">Forgot Password?</a>
            </div>
            <button type="submit" class="btn btn-submit color-purple w-100 mt-3 mb-2">Login</button>
            <div class="d-flex align-items-center">
                Don't have account?&nbsp; <a asp-action="Registration" class="text-decoration-none">Register</a>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function ()
    {
        var successToastMessage = '@TempData["SuccessToast"]';
        var errorToastMessage = '@TempData["ErrorToast"]';

        if (successToastMessage)
        {
            toastr.success(successToastMessage, "Success");
        }
        else if (errorToastMessage)
        {
            toastr.error(errorToastMessage, "Error");
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}