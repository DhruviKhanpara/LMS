@model LMS.Common.Models.PaginationModel;

<style>
    .pagination-controls {
        border: 1px solid #ddd;
        border-radius: 0 0 5px 5px;
        border-top: none;
    }

    #pageSize {
        border: none;
    }

    @@media (max-width: 465px) {
        .first, .last, .next, .prev {
            margin: 0 !important;
        }
    }
</style>

<div class="pagination-controls d-flex justify-content-end flex-wrap-reverse pe-2">
    <div class="d-flex align-items-center">
        <label for="pageSize" class="text-black">Items per page: </label>
        <select id="pageSize" class="text-center" for="pageSize">
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="30">30</option>
            <option value="40">40</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select>
    </div>
    <div class="d-flex align-items-baseline">
        <a href="?pageNumber=1&pageSize=@(Model.PageSize)" class="btn color-purple fw-bold height-fit-content mx-1 px-1 border-0 pagination-btn first" data-bs-toggle="tooltip" data-bs-placement="right" title="First">
            <i class="fa fa-angle-double-left" aria-hidden="true"></i>
        </a>
        <a href="?pageNumber=@(Model.PageNumber > 1 ? Model.PageNumber - 1 : 1)&pageSize=@(Model.PageSize)" class="btn color-purple fw-bold height-fit-content mx-1 px-1 border-0 pagination-btn prev" data-bs-toggle="tooltip" data-bs-placement="right" title="Previous">
            <i class="fa fa-angle-left" aria-hidden="true"></i>
        </a>
        <input id="pageNumber" type="number" min="1" max="@Model.PageCount" value="@Model.PageNumber" class="border-0 text-center" placeholder="" /> <label for="pageNumber" class="text-black"> of @Model.PageCount pages </label>
        <a href="?pageNumber=@(Model.PageNumber < Model.PageCount ? Model.PageNumber + 1 : Model.PageCount > 0 ? Model.PageCount : 1)&pageSize=@(Model.PageSize)" class="btn color-purple fw-bold height-fit-content mx-1 px-1 border-0 pagination-btn next" data-bs-toggle="tooltip" data-bs-placement="right" title="Next">
            <i class="fa fa-angle-right" aria-hidden="true"></i>
        </a>
        <a href="?pageNumber=@(Model.PageCount > 0 ? Model.PageCount : 1)&pageSize=@(Model.PageSize)" class="btn color-purple fw-bold height-fit-content mx-1 px-1 border-0 pagination-btn last" data-bs-toggle="tooltip" data-bs-placement="right" title="Last">
            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
        </a>
    </div>
</div>