@using LMS.Presentation.HTMLHelper;
@using LMS.Core.Enums;

@model LMS.Application.Contracts.DTOs.PaginatedResponseDto<LMS.Application.Contracts.DTOs.Genre.GetGenreDto>

@{
    ViewData["Title"] = "GetGenres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    th {
        position: relative;
    }
</style>

<script src="~/js/sorting.js" asp-append-version="true"></script>

@Html.Heading("Genre Information")
<div class="container-fluid my-1">
    <div class="d-flex justify-content-end px-3 my-3 gap-3">
        <div>
            <a class="btn btn-submit color-purple" id="genre-add-btn">Create Genre</a>
        </div>
        <div>
            <a asp-area="" asp-controller="Genre" asp-action="GetExportGenres" class="btn btn-submit color-purple">Export Genre</a>
        </div>
        @if (User.Identity.IsAuthenticated && User.IsInRole(nameof(RoleListEnum.Admin)))
        {
            <script src="~/js/filterSelector.js" asp-append-version="true"></script>

            <div class="did-floating-label-content m-0 w-15">
                <select class="did-floating-select select2-single filter-options" data-params="activeData" id="data-selection-option" value="">
                    <option value="">Removed and Active Data</option>
                    <option value="true">Active Data</option>
                    <option value="false">Removed Data</option>
                </select>
            </div>
        }
    </div>
    <div class="table-responsive scrollable-table">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th class="sortable-header" data-field="Name">Genre Name</th>
                    <th class="sortable-header text-center" data-field="Description">Description</th>
                    <th class="sortable-header text-center" data-field="TotalActiveBooks">Total Active Books</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Data is not null && Model.Data.Any())
                {
                    @foreach (var item in Model.Data)
                    {
                        <tr class="@(item.IsRemoved ? "bg-color-danger" : "bg-color-default")">
                            <td>
                                <div class="d-flex justify-content-between gap-3 genre-details-table">
                                    @if (User.Identity.IsAuthenticated && (User.IsInRole(nameof(RoleListEnum.Librarian)) || User.IsInRole(nameof(RoleListEnum.Admin))) && !item.IsRemoved)
                                    {
                                        <a class="color-purple bi-hover-bold genre-actionById-btn" 
                                            asp-area="" 
                                            asp-controller="Genre" 
                                            asp-action="GetGenreDetailById" 
                                            data-genre-id="@item.Id" 
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right" 
                                            title="Detail">
                                        <i class="bi bi-exclamation-circle"></i></a>

                                        <a class="color-purple bi-hover-bold genre-actionById-btn" 
                                            asp-area="" 
                                            asp-controller="Genre" 
                                            asp-action="UpdateGenre" 
                                            data-genre-id="@item.Id"
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right" 
                                            title="Edit">
                                        <i class="bi bi-pencil-square"></i></a>

                                        <a class="color-purple bi-hover-bold genre-delete-btn" 
                                            asp-area="" 
                                            asp-controller="Genre" 
                                            asp-action="DeleteGenre" 
                                            data-genre-id="@item.Id" 
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right" 
                                            title="Delete">
                                        <i class="bi bi-trash3"></i></a>

                                        <a class="color-purple bi-hover-bold genre-book-btn" 
                                            asp-area="" 
                                            asp-controller="Book"
                                            asp-action="GetBooks"
                                            data-genre-id="@item.Id" 
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right" 
                                            title="Books">
                                        <i class="bi bi-journal-bookmark"></i></a>
                                    }

                                    @if (User.Identity.IsAuthenticated && User.IsInRole(nameof(RoleListEnum.Admin)))
                                    {
                                        <a class="color-purple bi-hover-bold genre-actionById-btn"
                                            asp-area=""
                                            asp-controller="Log"
                                            asp-action="GetGenreAuditHistoryByGenreId"
                                            data-genre-id="@item.Id"
                                            data-bs-toggle="tooltip"
                                            data-bs-placement="right"
                                            title="History">
                                        <i class="bi bi-clock-history"></i></a>

                                        @if (item.IsRemoved)
                                        {
                                            @* restore *@
                                        }
                                    }
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="truncate-description-container" data-max-length="160" data-bs-toggle="tooltip" data-bs-placement="right" title="@item.Description">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.TotalActiveBooks)
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center border-0">No records found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @{
        await Html.RenderPartialAsync("_PaginationPartial", Model.Pagination);
    }
</div>

<div id="genreContainer"></div>
<div id="confirmationModalContainer">
    @await Html.PartialAsync("_ConfirmationBoxModelPartial")
</div>

<script>
    $(document).ready(function ()
    {
        var successToastMessage = '@TempData["SuccessToast"]';
        var errorToastMessage = '@TempData["ErrorToast"]';

        if (successToastMessage)
        {
            toastr.success(successToastMessage, "Success");
        }
        else if (errorToastMessage)
        {
            toastr.error(errorToastMessage, "Error");
        }

        var hasActiveBookLookup = @Html.Raw(Json.Serialize(Model.Data?.ToDictionary(m => m.Id, m => m.TotalActiveBooks > 0)));

        $(".genre-delete-btn").each(function ()
        {
            var genreId = $(this).data("genre-id");
            var hasActiveBook = hasActiveBookLookup[genreId];

            if (hasActiveBook)
            {
                $(this).addClass("btn-submit-disabled")
                    .attr("title", "Disabled due to genre is in use")
                    .removeAttr("data-genre-id");
            }
        });

        $(".genre-book-btn").each(function ()
        {
            var genreId = $(this).data("genre-id");
            var hasActiveBook = hasActiveBookLookup[genreId];

            if (!hasActiveBook)
            {
                $(this).addClass("btn-submit-disabled")
                    .attr("title", "Disabled due to no book in this genre")
                    .removeAttr("data-genre-id");
            }
        });

        $('#genre-add-btn').off("click").on("click", function ()
        {
            event.preventDefault();
            toggleButtonState('#genre-add-btn', true, 'color-purple btn-submit');

            $.ajax({
                url: '@Url.Action("AddGenre", "Genre")',
                type: 'GET',
                contentType: 'application/json',
                success: function (result)
                {
                    $('#genreContainer').html(result);
                }
            });
            toggleButtonState('#genre-add-btn', false, 'color-purple btn-submit');
        });

        $('.genre-details-table .genre-delete-btn').off("click").on("click", function (event)
        {
            event.preventDefault();
            $(this).addClass("btn-submit-disabled");

            var genreId = $(this).data('genre-id');

            if (genreId !== undefined)
            {
                var message = "Are you sure you want delete this genre?";
                setProceedButtonHref(this, message, "id=" + genreId);
            }

            $(this).removeClass("btn-submit-disabled");
        });

        $('.genre-details-table .genre-actionById-btn').off("click").on("click", function (event)
        {
            event.preventDefault();
            $(this).addClass("btn-submit-disabled");

            var genreId = $(this).data('genre-id');

            if (genreId !== undefined)
            {
                $.ajax({
                    url: $(this).attr("href"),
                    data: { id: genreId },
                    type: 'GET',
                    contentType: 'application/json',
                    success: function (result)
                    {
                        $('#genreContainer').html(result);
                    }
                });
            }
            
            $(this).removeClass("btn-submit-disabled");
        });

        $('.genre-details-table .genre-book-btn').off("click").on("click", function (event)
        {
            event.preventDefault();
            $(this).addClass("btn-submit-disabled")

            var genreId = $(this).data('genre-id');

            if (genreId !== undefined)
            {
                var url = $(this).attr("href") + "?genre=" + genreId;
                window.location.href = url.toString();
            }

            $(this).removeClass("btn-submit-disabled");
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}