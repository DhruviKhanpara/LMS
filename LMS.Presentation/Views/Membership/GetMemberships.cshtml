@using LMS.Presentation.HTMLHelper;
@using LMS.Core.Enums;

@model LMS.Application.Contracts.DTOs.PaginatedResponseDto<LMS.Application.Contracts.DTOs.Membership.GetMembershipDto>

@{
    ViewData["Title"] = "GetMemberships";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    th {
        position: relative;
    }
</style>

<script src="~/js/sorting.js" asp-append-version="true"></script>

@Html.Heading("Membership Information")
<div class="container-fluid my-1">
    <div class="d-flex justify-content-end px-3 my-3 gap-3">
        <div>
            <a class="btn btn-submit color-purple" id="membership-add-btn">New Membership</a>
        </div>
        <div>
            <a asp-area="" asp-controller="Membership" asp-action="GetExportMembership" class="btn btn-submit color-purple">Export Membership</a>
        </div>
        @if (User.Identity.IsAuthenticated && User.IsInRole(nameof(RoleListEnum.Admin)))
        {
            <script src="~/js/filterSelector.js" asp-append-version="true"></script>

            <div class="did-floating-label-content m-0 w-15">
                <select class="did-floating-select select2-single filter-options" data-params="activeData" id="data-selection-option" value="">
                    <option value="">Removed and Active Data</option>
                    <option value="true">Active Data</option>
                    <option value="false">Removed Data</option>
                </select>
            </div>
        }
    </div>
    <div class="table-responsive scrollable-table">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th class="sortable-header" data-field="Type">Type</th>
                    <th class="sortable-header text-center" data-field="Description">Description</th>
                    <th class="sortable-header text-center" data-field="BorrowLimit">Borrow Limit</th>
                    <th class="sortable-header text-center" data-field="ReservationLimit">Reservation Limit</th>
                    <th class="sortable-header text-center" data-field="Duration">Duration in Days</th>
                    <th class="sortable-header text-center" data-field="Cost">Cost</th>
                    <th class="sortable-header text-center" data-field="Discount">Discount</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Data is not null && Model.Data.Any())
                {
                    @foreach (var item in Model.Data)
                    {
                        <tr class="@(item.IsRemoved ? "bg-color-danger" : "bg-color-default")">
                            <td>
                                <div class="d-flex justify-content-between gap-3 membership-details-table">
                                    @if (User.Identity.IsAuthenticated && (User.IsInRole(nameof(RoleListEnum.Librarian)) || User.IsInRole(nameof(RoleListEnum.Admin))) && !item.IsRemoved)
                                    {
                                        <a class="color-purple bi-hover-bold membership-actionById-btn" 
                                            asp-area="" 
                                            asp-controller="Membership" 
                                            asp-action="GetMembershipDetailById" 
                                            data-membership-id="@item.Id" 
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right" 
                                            title="Detail">
                                        <i class="bi bi-exclamation-circle"></i></a>

                                        <a class="color-purple bi-hover-bold membership-actionById-btn" 
                                            asp-area="" 
                                            asp-controller="Membership"
                                            asp-action="UpdateMembership" 
                                            data-membership-id="@item.Id" 
                                            data-bs-toggle="tooltip" 
                                            data-bs-placement="right"
                                            title="Edit">
                                        <i class="bi bi-pencil-square"></i></a>
                                    }

                                    @if (User.Identity.IsAuthenticated && User.IsInRole(nameof(RoleListEnum.Admin)))
                                    {
                                        @if (!item.IsRemoved)
                                        {
                                            <a class="color-purple bi-hover-bold membership-delete-btn" 
                                                asp-area="" 
                                                asp-controller="Membership" 
                                                asp-action="DeleteMembership" 
                                                data-membership-id="@item.Id" 
                                                data-bs-toggle="tooltip" 
                                                data-bs-placement="right" 
                                                title="Delete">
                                            <i class="bi bi-trash3"></i></a>   
                                        }

                                        <a class="color-purple bi-hover-bold membership-actionById-btn"
                                            asp-area=""
                                            asp-controller="Log"
                                            asp-action="GetMembershipAuditHistoryByMembershipId"
                                            data-membership-id="@item.Id"
                                            data-bs-toggle="tooltip"
                                            data-bs-placement="right"
                                            title="History">
                                        <i class="bi bi-clock-history"></i></a>

                                        @if (item.IsRemoved)
                                        {
                                            @* restore *@
                                        }
                                    }
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td class="truncate-description-container" data-max-length="100">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.BorrowLimit)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.ReservationLimit)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Duration)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Cost)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Discount)
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center border-0">No records found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @{
        await Html.RenderPartialAsync("_PaginationPartial", Model.Pagination);
    }
</div>

<div id="membershipContainer"></div>
<div id="confirmationModalContainer">
    @await Html.PartialAsync("_ConfirmationBoxModelPartial")
</div>

<script>
    $(document).ready(function ()
    {
        var successToastMessage = '@TempData["SuccessToast"]';
        var errorToastMessage = '@TempData["ErrorToast"]';

        if (successToastMessage)
        {
            toastr.success(successToastMessage, "Success");
        }
        else if (errorToastMessage)
        {
            toastr.error(errorToastMessage, "Error");
        }

        $('#membership-add-btn').off("click").on("click", function ()
        {
            event.preventDefault();
            toggleButtonState('#membership-add-btn', true, 'color-purple btn-submit');

            $.ajax({
                url: '@Url.Action("CreateMembership", "Membership")',
                type: 'GET',
                contentType: 'application/json',
                success: function (result)
                {
                    $('#membershipContainer').html(result);
                }
            });
            toggleButtonState('#membership-add-btn', false, 'color-purple btn-submit');
        });

        $('.membership-details-table .membership-delete-btn').off("click").on("click", function (event)
        {
            event.preventDefault();
            $(this).addClass("btn-submit-disabled");

            var membershipId = $(this).data('membership-id');

            if (membershipId !== undefined)
            {
                var message = "Are you sure you want delete this membership?";
                setProceedButtonHref(this, message, "id=" + membershipId);
            }

            $(this).removeClass("btn-submit-disabled");
        });

        $('.membership-details-table .membership-actionById-btn').off("click").on("click", function (event)
        {
            event.preventDefault();
            $(this).addClass("btn-submit-disabled");

            var membershipId = $(this).data('membership-id');

            if (membershipId !== undefined)
            {
                $.ajax({
                    url: $(this).attr("href"),
                    data: { id: membershipId },
                    type: 'GET',
                    contentType: 'application/json',
                    success: function (result)
                    {
                        $('#membershipContainer').html(result);
                    }
                });
            }

            $(this).removeClass("btn-submit-disabled");
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}